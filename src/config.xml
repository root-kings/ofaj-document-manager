<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dayshmookh.ofaj.document.manager" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>OFAJ Document Manager</name>
    <description>
        Your maintenance assistant.
    </description>
    <author email="krushndayshmookh@gmail.com" href="http://www.dayshmookh.com">
        Dayshmookh Apps
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-7.0.1" />
    <preference name="DisallowOverscroll" value="true" />
    <access origin="*" />
    <plugin name="cordova-plugin-camera" spec="~4.0.2" />
    <platform name="android">
        <icon density="ldpi" src="www/images/icons/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="mdpi" src="www/images/icons/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="www/images/icons/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="www/images/icons/android/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="www/images/icons/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="www/images/icons/android/mipmap-xxxhdpi/ic_launcher.png" />
        <splash density="land-ldpi" src="www/images/screens/android/screen-ldpi-landscape.png" />
        <splash density="land-mdpi" src="www/images/screens/android/screen-mdpi-landscape.png" />
        <splash density="land-hdpi" src="www/images/screens/android/screen-hdpi-landscape.png" />
        <splash density="land-xhdpi" src="www/images/screens/android/screen-xhdpi-landscape.png" />
        <splash density="land-xxhdpi" src="www/images/screens/android/screen-xxhdpi-landscape.png" />
        <splash density="land-xxxhdpi" src="www/images/screens/android/screen-xxxhdpi-landscape.png" />
        <splash density="port-ldpi" src="www/images/screens/android/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" src="www/images/screens/android/screen-mdpi-portrait.png" />
        <splash density="port-hdpi" src="www/images/screens/android/screen-hdpi-portrait.png" />
        <splash density="port-xhdpi" src="www/images/screens/android/screen-xhdpi-portrait.png" />
        <splash density="port-xxhdpi" src="www/images/screens/android/screen-xxhdpi-portrait.png" />
        <splash density="port-xxxhdpi" src="www/images/screens/android/screen-xxxhdpi-portrait.png" />
    </platform>

    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-battery-status" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-contacts" source="npm" spec="~2.0.1" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />

    <engine name="android" spec="~7.0.0" />
</widget>
